@{
    ViewData["Title"] = "Login";
}
@model backend.Models.User

<div class="login-container">
    <h2>Sign Up</h2>


    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="form-group mb-3">
            <label for="name">Full Name</label>
            <input asp-for="Name" class="form-control" id="name" placeholder="Full name" required />
        </div>

        <div class="form-group mb-3">
            <label for="email">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="example@mail.com"
                required />
        </div>

        <div class="form-group mb-4">
            <label for="password">Password</label>
            <input asp-for="password" type="password" class="form-control" id="password" placeholder="password"
                required />
        </div>
        <div class="form-group mb-4">
            <label for="Address">Address</label>
            <textarea asp-for="Address" class="form-control" id="Address" rows="3" placeholder="Your full address"
                required></textarea>

        </div>
        <div class="form-group mb-4">
            <label for="phoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" type="tel" class="form-control" id="phoneNumber"
                placeholder="e.g. 0555 123 4567" required />
        </div>



        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        <div class="text-center mt-3">
            <a class="btn btn-link" asp-controller="Account" asp-action="Login">Already have an account? Login in</a>
        </div>
    </form>

    @if (ViewBag.Error != null)
    {
        <p class="text-danger text-center mt-3">@ViewBag.Error</p>
    }
</div>

@model List<backend.Models.Product>
@{
    ViewData["Title"] = "Products";
}


<div class="container my-5">
    <div class="row">
        <div class="col-md-3" style="gap:5px">
            <form method="get" asp-controller="Product" asp-action="Index" class=" p-3 " style="gap:10px;">
                <h5 style="color:rgb(58, 8, 8)">Filter Options</h5>
                <hr />
                <strong>By Type</strong><br />
                <div class="form-check" style="padding-top: 10px;">
                    <input type="checkbox" name="categories" value="all" id="check-all" class="form-check-input" />
                    <label class="form-check-label" for="check-all">All Candles</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="categories" value="ceramic" class="form-check-input" id="ceramic" />
                    <label class="form-check-label" for="ceramic">Ceramic Candles</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="categories" value="themed" class="form-check-input" id="themed" />
                    <label class="form-check-label" for="themed">Themed Candles</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="categories" value="pillar" class="form-check-input" id="pillar" />
                    <label class="form-check-label" for="pillar">Pillar Candles</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="categories" value="jar" class="form-check-input" id="jar" />
                    <label class="form-check-label" for="jar">Jar Candles</label>
                </div>

                <button type="submit" class="btn mt-3 w-100"
                    style="background-color:rgb(58, 8, 8); color:white;">Filter</button>
            </form>
        </div>
        <div class="col-md-9 custom-content">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var product in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm" style="border-radius: 10px; transition: transform 0.2s ease">
                            <div class="image-wrapper">
                                <img src="~/@product.ImagePath" class="card-img-top product-image" alt="@product.Name" />
                            </div>
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.OrderPrice.ToString("C", new System.Globalization.CultureInfo("en-US"))</p>
                                <p class="card-text text-warning">‚≠ê @product.Rating</p>
                                <a href="@Url.Action("Details", "Product", new { id = product.ID })"
                                    class="btn btn-outline-dark mt-auto">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
